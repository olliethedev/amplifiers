{
    "exclude": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.stub.ts",
        "node_modules",
        "dist",
        "resources",
        "examples"
    ],
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "paths": {
            "@amplifiers/*": ["./packages/*/"]
        },
        "jsx": "react-jsx"
    }
}